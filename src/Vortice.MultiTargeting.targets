<Project>
  <ItemGroup>
    <Compile Remove="bin\**;obj\**" />
    <None Remove="bin\**;obj\**" />
    <Compile Remove="Platforms\**\*.cs" />
    <None Include="Platforms\**\*.cs" />
  </ItemGroup>

  <!-- Windows Forms and WPF -->
  <PropertyGroup Condition=" '$(_VorticeTargetPlatformIsWindows)' == 'True' ">
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <!-- SDL2 -->
  <ItemGroup Condition=" '$(TargetFramework)' == 'net7.0' OR $(TargetFramework.StartsWith('netstandard2'))">
    <Compile Include="Platforms\Standard\*.cs" Exclude="$(DefaultItemExcludes);$(DefaultExcludesInProjectFolder)" />
  </ItemGroup>

  <!-- Win32/WinForms -->
  <PropertyGroup Condition=" '$(_VorticeTargetPlatformIsWindows)' == 'True' ">
    <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
  </PropertyGroup>
  
  <ItemGroup Condition=" '$(_VorticeTargetPlatformIsWindows)' == 'True' ">
    <Compile Include="Platforms\Windows\*.cs" Exclude="$(DefaultItemExcludes);$(DefaultExcludesInProjectFolder)" />
  </ItemGroup>

</Project>
